.newspaper {
    -webkit-column-count: 3; /* Chrome, Safari, Opera */
    -moz-column-count: 3; /* Firefox */
    column-count: 3;
    -webkit-column-gap: 1px; /* Chrome, Safari, Opera */
    -moz-column-gap: 1px; /* Firefox */
    column-gap: 1px;
    margin-bottom: 20px;
}

  .img-n.img-n.img-n {
  display: block;
  margin-bottom: -6px;
  background: white;
  border: none;
  padding-top: 6px;
  }

  .newspaper0 {
